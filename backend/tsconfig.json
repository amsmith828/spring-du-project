{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    // "noImplicitAny": true,
    "alwaysStrict": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*"]
}
